<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.backend.mapper.GameMapper">

    <resultMap id="BaseResultMap" type="com.example.backend.model.domain.Game">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="gameName" column="gameName" jdbcType="VARCHAR"/>
            <result property="avatarUrl" column="avatarUrl" jdbcType="VARCHAR"/>
            <result property="number" column="number" jdbcType="INTEGER"/>
            <result property="averageScore" column="averageScore" jdbcType="FLOAT"/>
            <result property="type" column="type" jdbcType="INTEGER"/>
            <result property="profile" column="profile" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,gameName,avatarUrl,
        number,averageScore,type,
        profile
    </sql>
</mapper>
